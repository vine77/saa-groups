<div {{bind-attr class=":box :box-solid :box-primary :component isExpanded::collapsed-box"}}>
  <div class="box-header" {{action "toggleCollapsed" this}}>
    {{!--
    <div class="box-tools exclude pull-right">
      <button class="btn btn-primary btn-sm" type="button" {{action "details" bubbles=false}}>
        Details
        <i class="fa fa-toggle-right"></i>
      </button>
      <div {{bind-attr class=":dropdown :inline-block isActionsVisible:open"}}>
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" {{action "toggleActions" bubbles=false}}>
          Actions
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><a>Action 1</a></li>
          <li><a>Action 2</a></li>
          <li><a>Action 3</a></li>
        </ul>
      </div>
    </div>
    --}}
    <div class="box-expand pull-left">
      {{#if isExpanded}}
        <button class="btn btn-primary btn-sm"><i class="fa fa-caret-down"></i></button>
      {{else}}
        <button class="btn btn-primary btn-sm"><i class="fa fa-caret-right"></i></button>
      {{/if}}
    </div>
    <h3 class="box-title">
      {{nodeName}}
    </h3>
  </div>
  <div class="box-subheader clearfix">
    <div class="component-status">
      <div class="component-status-state">
        <span class="hint--top" {{bind-attr data-hint="healthMessage"}}>
          <i {{bind-attr class=":fa :fa-fw healthIconClass"}}></i>
        </span>
        <span class="hint--top" {{bind-attr data-hint="operationalMessage"}}>
          <i {{bind-attr class=":fa :fa-fw operationalIconClass"}}></i>
        </span>
        {{#if isAggressor}}
          <span class="hint--top" data-hint="Contention: Aggressor">
            <i class="fa fa-fw fa-bullhorn error"></i>
          </span>
        {{/if}}
      </div>
      <div class="component-status-other">
        <span class="hint--top" {{bind-attr data-hint="slaMessage"}}>
          <i {{bind-attr class=":fa :fa-fw slaIconClass"}}></i>
        </span>
        <span class="hint--top" {{bind-attr data-hint="trustMessage"}}>
          <i {{bind-attr class=":fa :fa-fw trustIconClass"}}></i>
        </span>
        {{#if isVictim}}
          <span class="hint--top" data-hint="Contention: Victim">
            <i class="fa fa-fw fa-headphones warning"></i>
          </span>
        {{/if}}
      </div>
    </div><div class="component-capacity">
      <div>
        {{#if isAssuredCoresPhysical}}
          {{#if hasCores}}{{cores}}{{/if}}
          {{#if hasVcpus}}{{vcpus}}{{/if}}
        {{else}}
          {{n-a capabilities.scu_allocated_min}} allocated SCUs
        {{/if}}
      </div>
      <div class="chart-bar-horizontal">
        <div class="clearfix">
          <small class="pull-left">Memory (GiB)</small>
          <small class="pull-right">{{memoryPercent}}</small>
        </div>
        <div class="progress xs">
          <div class="progress-bar progress-bar-green" {{bind-attr style="memoryStyle"}}></div>
        </div>
        <div class="clearfix">
          <small class="pull-left">{{to-fixed memoryCurrent 2}}</small>
          <small class="pull-right">{{to-fixed memoryMax 2}}</small>
        </div>
      </div>
    </div>
    <div {{bind-attr class=":component-charts utilizationMax:double-charts"}}>
      <div class="chart-bar-horizontal">
        {{#if utilizationMax}}
          <div class="clearfix">
            <small class="pull-left">Utilization (SCUs)</small>
            <small class="pull-right">{{utilizationPercent}}</small>
          </div>
          <div class="progress xs">
            <div class="progress-bar progress-bar-green" {{bind-attr style="utilizationStyle"}}></div>
          </div>
          <div class="clearfix">
            <small class="pull-left">{{utilizationCurrent}}</small>
            <small class="pull-right">{{utilizationMax}}</small>
          </div>
        {{else}}
          Utilization: {{utilizationCurrent}} SCUs
        {{/if}}
      </div>
      <div class="chart-bar-horizontal">
        <div class="clearfix">
          <small class="pull-left">Cache Contention</small>
          <small class="pull-right">{{contentionCurrent}}</small>
        </div>
        <div class="progress xs">
          <div class="progress-bar progress-bar-green" {{bind-attr style="contentionStyle"}}></div>
        </div>
      </div>
    </div>
  </div>
  <div class="box-body">
    {{partial "cgroups"}}
  </div>
</div>
