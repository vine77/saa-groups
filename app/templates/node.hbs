<div {{bind-attr class=":box :box-solid :box-primary :component collapsedBox"}}>
  <div class="box-header" {{action toggleCollapsed}}>
    <div class="box-tools exclude pull-right">
      <button class="btn btn-primary btn-sm" type="button" {{action "details" bubbles=false}}>
        Details
        <i class="fa fa-toggle-right"></i>
      </button>
      <div {{bind-attr class=":dropdown :inline-block isActionsVisible:open"}}>
        <button class="btn btn-default btn-sm dropdown-toggle" type="button" {{action "toggleActions" bubbles=false}}>
          Actions
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><a>Action 1</a></li>
          <li><a>Action 2</a></li>
          <li><a>Action 3</a></li>
        </ul>
      </div>
    </div>
    <div class="box-tools box-expand pull-left">
      {{#if collapsedBox}}
        <button class="btn btn-primary btn-sm"><i class="fa fa-caret-right"></i></button>
      {{else}}
        <button class="btn btn-primary btn-sm"><i class="fa fa-caret-down"></i></button>
      {{/if}}
    </div>
    <h3 class="box-title">
      {{!-- <i class="fa fa-hdd-o"></i> --}}
      {{nodeName}}
    </h3>
  </div>
  <div class="box-subheader clearfix">
    <div class="component-status">
      <div class="component-status-state">
        <i class="fa fa-fw fa-check-circle success"></i>
        <i class="fa fa-fw fa-bolt on"></i>
      </div>
      <div class="component-status-other">
        <i class="fa fa-fw fa-trophy assured"></i>
        <i class="fa fa-fw fa-lock unregistered"></i>
        <i class="fa fa-fw fa-bullhorn error" style="color:#9d261d"></i>
      </div>
    </div><div class="component-capacity">
      <div>2 CPUs &times; 8 cores @ 2.3 GHz</div>
      <div class="clearfix">
        <small class="pull-left">Memory (GiB)</small>
        <small class="pull-right">31%</small>
      </div>
      <div class="progress xs">
        <div class="progress-bar progress-bar-green" style="width: 31%;"></div>
      </div>
      <div class="clearfix">
        <small class="pull-left">15</small><small class="pull-right">48</small>
      </div>
    </div><div class="component-charts">
      <img src="/assets/images/dials-node.png">
    </div>
  </div>
  <div class="box-body">
    {{partial "cgroups"}}
  </div>
</div>
